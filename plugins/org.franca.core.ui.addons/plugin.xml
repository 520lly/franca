<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.franca.core.ui.addons.contractviewer.category"
            class="org.franca.core.ui.addons.contractviewer.util.ContractViewerExecutableExtensionFactory:org.franca.core.ui.addons.contractviewer.FrancaContractVisualizerView"
            icon="icons/franca_logo.png"
            id="org.franca.core.ui.addons.contractviewer"
            name="Franca Contract View"
            restorable="true">
      </view>
      <category
            id="org.franca.core.ui.addons.contractviewer.category"
            name="Franca">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.franca.core.ui.addons.dotgenerator"
            name="dotgenerator">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.franca.core.ui.addons.contractviewer">
         <command
               commandId="org.franca.core.ui.addons.dotgenerator"
               icon="icons/dot.png"
               label="Generate DOT"
               style="push"
               tooltip="Generate DOT">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.franca.core.ui.addons.contractviewer.handlers.DotGeneratorHandler"
            commandId="org.franca.core.ui.addons.dotgenerator">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.franca.core.ui.addons.wizard.category"
            class="org.franca.core.ui.addons.contractviewer.util.ContractViewerExecutableExtensionFactory:org.franca.core.ui.addons.wizard.NewFrancaIDLFileWizard"
            finalPerspective="org.eclipse.pde.ui.PDEPerspective"
            icon="icons/franca_logo.png"
            id="org.franca.core.ui.addons.newidlfilewizard"
            name="Franca IDL File"
            preferredPerspectives="org.eclipse.pde.ui.PDEPerspective,org.eclipse.jdt.ui.JavaPerspective">
      </wizard>
      <category
            id="org.franca.core.ui.addons.wizard.category"
            name="Franca">
      </category>
   </extension>

</plugin>
